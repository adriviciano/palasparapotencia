---
const { nombre, resumen, precio, puntuacion, enlace, ruta, id, imageUrl } = Astro.props;
import Product from './Product.jsx';
---

<section id={id} style="margin-bottom: 3rem;">
  <Product
    name={nombre}
    price={precio}
    url={enlace}
    imageUrl={imageUrl}
    description={resumen}
  />

  <table>
    <thead>
      <tr>
        <th>Potencia</th>
        <th>Control</th>
        <th>Manejabilidad</th>
        <th>Punto dulce</th>
        <th>Durabilidad</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{puntuacion.potencia}</td>
        <td>{puntuacion.control}</td>
        <td>{puntuacion.manejabilidad}</td>
        <td>{puntuacion.puntoDulce}</td>
        <td>{puntuacion.durabilidad}</td>
      </tr>
    </tbody>
  </table>

  <p>
    <a href={ruta}>Ver an√°lisis completo</a>
  </p>
</section>
